{
  "manifest_version": 3,
  "name": "RMG Bridge",
  "version": "1.0.1",
  "description": "Bridges local AI (Ollama), auth, and services to RMG apps (NSIT, SCRP, OMNI, WSPR)",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:11434/*",
    "https://*.onrender.com/*",
    "https://*.netlify.app/*",
    "https://roninmedia.studio/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.onrender.com/*",
        "https://*.netlify.app/*",
        "https://roninmedia.studio/*",
        "http://localhost:*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
